{
  "name": "graphql-auth",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server",
    "clean": "rm -rf dist",
    "build": "yarn run clean && yarn run generate && yarn run tsc",
    "generate": "yarn run generate:prisma && npm run generate:nexus",
    "generate:prisma": "yarn run prisma generate",
    "generate:nexus": " yarn run ts-node-transpile-only --files src/schema",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src/server",
    "migrate": "npx prisma migrate up --experimental",
    "tsc": "tsc"
  },
  "dependencies": {
    "@nexus/schema": "0.17.0",
    "@prisma/client": "2.10.1",
    "bcryptjs": "2.4.3",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "graphql-middleware": "4.0.1",
    "graphql-shield": "7.4.0",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "8.5.1",
    "nexus-plugin-prisma": "0.23.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@prisma/cli": "2.10.1",
    "@types/bcryptjs": "2.4.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.2",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node": "12.19.3",
    "@types/ws": "7.2.9",
    "ts-node-dev": "1.0.0-pre.50"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
